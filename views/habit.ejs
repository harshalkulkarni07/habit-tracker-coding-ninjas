<link rel="stylesheet" href="/css/habit.css">

<div class="habitShowContainer">
    <div class="habitContainer">
        <div class="habitDetail">
            <h1>
                <%=habit.habit_name%>
            </h1>

            <div style="color:blue;">
                <%=starting%>
            </div>
        </div>
    </div>

    <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <%let i=1;for(day of lastDays){%>
            <%if(day.action){%>
              <tr>
                <td><%=day.date%></td>
                <%if(day.action=="Done" ){%>
                  <td>
                    <form action="/active/<%=habit._id%>" method="post" id="formActivity">
                      <input type="hidden" name="dayBefore" value=<%=(lastDays.length) - i++%> />
                      <button class="btn btn-success" type="submit">
                        <%=day.action%>
                      </button>
                    </form>
                  </td>
                <%}else if(day.action=="Not-Done" ){%>
                  <td>
                    <form action="/active/<%=habit._id%>" method="post" id="formActivity">
                      <input type="hidden" name="dayBefore" value=<%=(lastDays.length) - i++%> />
                      <button class="btn btn-danger" type="submit">
                        <%=day.action%>
                      </button>
                    </form>
                  </td>
                <%}else{%>
                  <td>
                    <form action="/active/<%=habit._id%>" method="post" id="formActivity">
                      <input type="hidden" name="dayBefore" value=<%=(lastDays.length) - i++%> />
                      <button class="btn btn-warning" type="submit">
                        <%=day.action%>
                      </button>
                    </form>
                  </td>
                <%}%>
              </tr>
            <%}%>
          <%}%>
        </tbody>
      </table>

    <div class="recordContainer">
        <section class="statis mt-4 text-center">
            <div class="row">

                <div class="col-md-6 col-lg-6 mb-4 mb-lg-2">
                    <div class="box bg-danger p-3 ">
                        <i class="uil-user"></i>
                        <h4>
                            <%=habit.current_Streak%> Days
                        </h4>
                        <p class="lead">Current Streak</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-6 mb-4 mb-md-0">
                    <div class="box bg-warning p-3">
                        <i class="uil-shopping-cart"></i>
                        <h4>
                            <%=habit.success_Days+" /"+habit.totalDaysTillDate%>
                        </h4>
                        <p class="lead">Score Days</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-6 ">
                    <div class="box bg-success p-3">
                        <i class="uil-feedback"></i>
                        <h4>
                            <%=habit.best_Streak%> Days
                        </h4>
                        <p class="lead">Best Streak</p>
                    </div>
                </div>
            </div>
        </section>
    </div>

</div>